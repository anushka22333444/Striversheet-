class Solution {
    public int myAtoi(String s) {
        // 1. Skip leading whitespace
        s = s.trim();

        // Handle empty string after trimming
        if (s.isEmpty()) {
            return 0;
        }

        // 2. Check for sign
        int sign = 1;
        int index = 0; // Pointer to the current character in 's'

        if (s.charAt(0) == '-') {
            sign = -1;
            index++;
        } else if (s.charAt(0) == '+') {
            index++;
        }
        // If the first char is a digit, index remains 0, and sign remains 1.

        // 3. Read in digits until a non-digit character or end of string
        long result = 0; // Use long to detect overflow before casting to int

        while (index < s.length()) {
            char ch = s.charAt(index);

            if (Character.isDigit(ch)) {
                int digit = ch - '0'; // Convert char digit to int value
                result = result * 10 + digit;

                // 4. Handle overflow
                if (sign == 1 && result > Integer.MAX_VALUE) {
                    return Integer.MAX_VALUE;
                }
                if (sign == -1 && (-result) < Integer.MIN_VALUE) { // Compare negative result to MIN_VALUE
                    return Integer.MIN_VALUE;
                }
            } else {
                // Stop processing if a non-digit character is encountered
                break;
            }
            index++;
        }

        // 5. Apply the sign and return the result
        return (int) (result * sign);
    }
}
